<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="AppTheme" parent="android:Theme.Light" />

    <style name="customButton" parent="@android:style/Widget.Button">
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">@dimen/feedSp</item>
        <item name="android:textColor">@color/textViewColor</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="customTextViewBottom" parent="@android:style/Widget.Button">
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">@dimen/bottomTextSize</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="MyAppTheme" parent="AppTheme">
        <item name="android:buttonStyle">@style/customButton</item>
    </style>

    <style name="NewDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="customEditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">@dimen/buttonTextSize</item>
        <item name="android:textColor">@color/textViewColor</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:padding">1dp</item>
    </style>

    <style name="customSmallText" parent="@android:style/Widget.TextView">
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/rosy</item>
    </style>

    <style name="customEditButton">
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">@dimen/buttonTextSize</item>
        <item name="android:textColor">@color/textViewColor</item>
        <item name="android:padding">1dp</item>
    </style>

    <style name="customSignupEditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">@dimen/signUpTextSize</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/textViewColor</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="customTextView" parent="@android:style/Widget.TextView">
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">@dimen/buttonTextSize</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">1dp</item>
    </style>

    <style name="customTextViewRozyLighr" parent="@android:style/Widget.TextView">
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">@dimen/signUpTextSize</item>
        <item name="android:textColor">@color/rosyLight</item>
        <item name="android:padding">1dp</item>
    </style>

    <style name="customTextViewRozyLightBig" parent="@android:style/Widget.TextView">
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">@dimen/tvTextSize</item>
        <item name="android:textColor">@color/rosyLight</item>
        <item name="android:padding">1dp</item>
    </style>

    <style name="customSmallTextView" parent="@android:style/Widget.TextView">
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">@dimen/bottomTextSize</item>
        <item name="android:textColor">@color/textViewColor</item>
        <item name="android:padding">1dp</item>
    </style>

    <style name="customSpinner" parent="@android:style/Widget.DropDownItem.Spinner">
        <item name="android:textSize">@dimen/buttonTextSize</item>
        <item name="android:padding">@dimen/spinnerPadding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:popupBackground">@android:color/transparent</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="customImageButton" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />

</resources>