<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.bigdropinc.selfieking"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
   >

        <com.bigdropinc.selfieking.views.RoundedImageView
            android:id="@+id/favatar"
            android:layout_width="@dimen/sizeProfileIconFeed"
            android:layout_height="@dimen/sizeProfileIconFeed"
            android:layout_margin="5dp" >
        </com.bigdropinc.selfieking.views.RoundedImageView>

        <LinearLayout
            android:id="@+id/ftext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="55dp"
            android:layout_toRightOf="@id/favatar"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/commentUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/commentDate"
                    style="@style/customTextViewRozyLighr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#cd635e"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/smallImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_margin="4dp"
            app:riv_corner_radius="5dp" />
    </RelativeLayout>

</LinearLayout>